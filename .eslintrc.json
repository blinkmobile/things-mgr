{
  "parser"  : "babel-eslint",
  "extends" : [
    "eslint:recommended",
    "standard",
    "standard-react",
    "semistandard"
  ],
  "plugins" : [
    "babel",
    "flow-vars"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "Action"       : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "generator-star-spacing": 0,
    "max-len": [2, 120, 2],
    "babel/generator-star-spacing": [2, { "before": true, "after": true }],
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1
  }
}
